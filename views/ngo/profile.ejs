<!-- views/ngo/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NGO Profile</title>
    <link rel="stylesheet" href="css/styles.css"> <!-- Link to your CSS file -->
</head>
<body>
    <h1>NGO Profile</h1>
    <form action="/ngo/profile" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= ngo[1] %>" required><br><br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= ngo[2] %>" required><br><br>

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" value="<%= ngo[3] %>" required><br><br>

        <button type="submit">Update Profile</button>
    </form>
</body>
</html>
